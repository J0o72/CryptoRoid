<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00041C"
    tools:context=".Intro">


    <View
        android:id="@+id/topView1"
        android:layout_width="18dp"
        android:layout_height="120dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:background="#FFFFFF"
        />

    <View
        android:visibility="invisible"
        android:id="@+id/topView2"
        android:layout_toStartOf="@+id/topView1"
        android:layout_width="18dp"
        android:layout_height="90dp"
        android:layout_marginEnd="20dp"
        android:background="#5AB397"
        />

    <View
        android:visibility="invisible"
        android:id="@+id/topView3"
        android:layout_toStartOf="@+id/topView2"
        android:layout_width="18dp"
        android:layout_height="60dp"
        android:layout_marginEnd="20dp"
        android:background="#AC2732"
        />


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:visibility="invisible"
            android:id="@+id/logo"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/logo" />

        <TextView
            android:visibility="invisible"
            android:id="@+id/slogar"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="3dp"
            android:text="CRYPTOROID"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />


    </LinearLayout>

    <View
        android:visibility="invisible"
        android:id="@+id/buttomView1"
        android:layout_width="18dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:background="#FFFFFF"
        />

    <View
        android:visibility="invisible"
        android:id="@+id/buttomView2"
        android:layout_toEndOf="@+id/buttomView1"
        android:layout_width="18dp"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:background="#5AB397"
        android:layout_alignParentBottom="true"
        />

    <View
        android:visibility="invisible"
        android:id="@+id/buttomView3"
        android:layout_toEndOf="@+id/buttomView2"
        android:layout_width="18dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:background="#AC2732"
        android:layout_alignParentBottom="true"

        />

</RelativeLayout>